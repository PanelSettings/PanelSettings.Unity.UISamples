.unity-button {
    font-size: 40px;
    transition-property: all;
    transition-duration: 0.5s;
    justify-content: flex-start;
}

.unity-button:focus {
    translate: 20px 0;
}

#menu-container {
    width: 1000px;
    margin-left: 300px;
    margin-top: 100px;
    flex-direction: row;
}

#menu-control {
    transition-property: translate;
    transition-duration: 0.5s;
}
