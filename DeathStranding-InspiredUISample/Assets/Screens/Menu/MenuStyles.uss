:root {
}

.unity-button {
    font-size: 40px;
    transition-property: all;
    transition-duration: 0.5s;
    justify-content: flex-start;
}

.unity-button:focus {
    translate: 20px 0;
}

#menu-control {
    transition-property: translate;
    transition-duration: 0.5s;
}

#menu-container {
    width: 800px;
    margin-left: 300px;
    margin-top: 100px;
}
